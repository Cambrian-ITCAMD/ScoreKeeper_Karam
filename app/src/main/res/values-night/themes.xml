<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper_Karam" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/editText</item>
        <item name="android:radioButtonStyle">@style/radioStyle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:switchStyle">@style/switchStyle</item>
    </style>

    <!--style/theme for the parent layout(ScrollView)-->
    <style name="parentLayout">
        <item name="android:background">@color/alto_night</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--style for the linear layout used as background for other palette-->
    <style name="mainFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary_night</item>
        <item name="android:layout_gravity">top</item>
        <item name="elevation">100dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- theme for the editText palette-->
    <style name="editText">
        <item name="android:background">@color/primary_night</item>
        <item name="android:editTextColor">@color/tertiary_night</item>
        <item name="android:editTextStyle">@id/normal</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textViewLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/tertiary_night</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--theme for the textView palette-->
    <style name="textViewTheme">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/tertiary_night</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--style for the radioButton/options used in the app-->
    <style name="radioStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/tertiary_night</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--style for the increase and decrease button used in the app layout-->
    <style name="Button.Seed" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/tertiary_night</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <!--style for the images used as team symbols in the app layout-->
    <style name="images">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--theme for inner linear layout palette used for the team names and logos-->
    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="background">@color/primary_night</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--style/theme for the switch used in app layout-->
    <style name="switchStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/tertiary_night</item>
        <item name="android:background">@color/primary_night</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:checked">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--theme for inner linear layout palette used for the team names and logos-->
    <style name="innerLayout">
        <item name="android:background">@color/silver_night</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--style for the textView used for versus text-->
    <style name="versusTab">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/primary_night</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--theme for linear layout used for the team names-->
    <style name="linearLayout1">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--style for linear layout used for team scores and images-->
    <style name="linearLayout3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/primary_night</item>
    </style>

    <!--theme for linear layout used for increase/decrease button and switch-->
    <style name="linearLayout8">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/silver_night</item>
    </style>
</resources>